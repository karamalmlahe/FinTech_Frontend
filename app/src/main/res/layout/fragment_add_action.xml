<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addActionFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:background="@color/snow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">
        <TextView
            android:id="@+id/actionType"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.35"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:fontFamily="@font/cairo_bold"
            />
        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.57"
            android:weightSum="1"
            android:orientation="vertical">
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.23"
                app:boxStrokeColor="@color/green"
                app:hintTextColor="@color/green"
                android:hint="@string/title_input"
                app:startIconDrawable="@drawable/badge"
                app:startIconContentDescription="@string/sum_input"
                android:layout_marginVertical="10dp"
                app:boxCornerRadiusTopEnd="5dp"
                app:boxCornerRadiusTopStart="5dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ed_title"
                    android:fontFamily="@font/cairo_medium"
                    android:textSize="15sp"
                    android:focusableInTouchMode="true"
                    app:boxStrokeColor="@color/green"
                    app:hintTextColor="@color/green"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_sum"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.23"
                app:boxStrokeColor="@color/green"
                app:hintTextColor="@color/green"
                android:hint="@string/sum_input"
                app:startIconDrawable="@drawable/attach_money"
                app:startIconContentDescription="@string/sum_input"
                android:layout_marginVertical="10dp"
                app:boxCornerRadiusTopEnd="5dp"
                app:boxCornerRadiusTopStart="5dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ed_sum"
                    android:fontFamily="@font/cairo_medium"
                    android:textSize="15sp"
                    android:focusableInTouchMode="true"
                    android:inputType="numberDecimal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_details"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25"
                app:boxStrokeColor="@color/green"
                app:hintTextColor="@color/green"
                android:hint="@string/details_input"
                android:layout_marginVertical="10dp"
                app:boxCornerRadiusTopEnd="5dp"
                app:boxCornerRadiusTopStart="5dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ed_details"
                    android:fontFamily="@font/cairo_medium"
                    android:textSize="15sp"
                    android:focusableInTouchMode="true"
                    android:inputType="textMultiLine"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/sendActionBtn"
            android:layout_marginHorizontal="10dp"
            android:text="@string/confirm_btn"
            android:fontFamily="@font/cairo_medium"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:letterSpacing="0.02"
            android:gravity="center"
            android:background="@drawable/button_onclick_ui"
            android:clickable="true"
            android:layout_height="0dp"
            android:layout_weight="0.07"/>
    </LinearLayout>

</FrameLayout>